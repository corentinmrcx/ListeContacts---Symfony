{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ contact.firstname }} {{ contact.lastname }}</h1>
    <dl>
        <dt>Nom :</dt>
            <dd>{{ contact.lastname }}</dd>
        <dt>Prénom :</dt>
            <dd>{{ contact.firstname }}</dd>
        <dt>Email :</dt>
            <dd>{{ contact.email }}</dd>
        <dt>Numéro de téléphone :</dt>
            <dd>{{ contact.phone }}</dd>
        <dt>Catégorie : </dt>
            <dd>
                {{ contact.category.name ?? 'Aucune catégorie' }}
            </dd>
    </dl>
{% endblock %}

{% block title %}{{ contact.firstname }} {{ contact.lastname }}{% endblock %}
