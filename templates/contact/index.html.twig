{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
    <h1>Liste des contacts</h1>
        <ul class="contacts">
            {% for contact in contacts %}
                <li>
                    <a href="{{ path('app_contact_show', {id: contact.id}) }}"><span class="firstname">{{ contact.lastname }}</span> <span class="lastname">{{ contact.firstname }}</span></a>
                </li>
            {% endfor %}
        </ul>
{% endblock %}